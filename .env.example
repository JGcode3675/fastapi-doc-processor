# Database
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/mydatabase

# Redis
REDIS_URL=redis://redis:6379/0

# Ollama (local LLM)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_LLM_MODEL=llama3.2:3b
OLLAMA_EMBED_MODEL=nomic-embed-text

# ChromaDB
CHROMADB_URL=http://host.docker.internal:8100
CHROMADB_COLLECTION_ID=69b78eb9-e090-42c2-b76d-9bf474088204

# ARQ Worker
ARQ_MAX_JOBS=4
ARQ_JOB_TIMEOUT=300

# Logging
LOG_FORMAT=console
LOG_LEVEL=INFO

# Alembic Migrations
# For existing databases that were created with create_all (before Alembic),
# run: alembic stamp head
# This marks the DB as up-to-date without re-running the initial migration.
